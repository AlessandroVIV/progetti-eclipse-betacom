package com.betacom.car.process;

import java.util.List;

public class ComandiProcess {

    private final VeicoloService service = new VeicoloService(); 

    public void process(List<String> lines) {
        for (String line : lines) {
            if (line.startsWith("add:")) {
                service.handleAdd(line.substring(4));
            } else if (line.startsWith("update:")) {
                service.handleUpdate(line.substring(7));
            } else if (line.startsWith("delete:")) {
                service.handleDelete(line.substring(7));
            } else if (line.equalsIgnoreCase("list")) {
                service.handleList();
            } else {
                System.out.println("Comando non riconosciuto: " + line);
            }
        }
    }
	
}
