package com.betacom.sb.component;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.betacom.sb.dao.BiciDAO;
import com.betacom.sb.dao.MacchinaDAO;
import com.betacom.sb.dao.MotoDAO;
import com.betacom.sb.dao.VeicoloDAO;
import com.betacom.sb.models.Bici;
import com.betacom.sb.models.Macchina;
import com.betacom.sb.models.Moto;
import com.betacom.sb.models.Veicolo;

@Component
public class BusinessComponent {
	
	@Autowired
	private VeicoloDAO daoV;

	@Autowired
	private BiciDAO daoB;
	
	@Autowired
	private MotoDAO daoM;
	
	@Autowired
	private MacchinaDAO daoMa;
	
	public void listVeicoli() {
		
		System.out.println("\nSelect di tutti i veicoli: ");
		List<Veicolo> lV = daoV.findAllVeicoli();
		lV.forEach(v -> System.out.println(v + "\n"));
		
		System.out.println("\nSelect veicolo per id");
		lV = daoV.getVeicoloById(13);
		lV.forEach(v -> System.out.println(v));
		
	}
	
	public void listBici() {
		
		System.out.println("\nSelect di tutte le bici: ");
		List<Bici> lB = daoB.findAllBici();
		lB.forEach(b -> System.out.println(b + "\n"));
		
		System.out.println("\nSelect bici per id: ");
		lB = daoB.getBiciById(2); // Per ora non ci sono bici
		lB.forEach(b -> System.out.println(b));
		
	}
	
	public void listMoto() {
		
		System.out.println("\nSelect di tutte le moto: ");
		List<Moto> lM = daoM.findAllMoto();
		lM.forEach(m -> System.out.println(m + "\n"));
		
		System.out.println("\nSelect moto per id: ");
		lM = daoM.getMotoById(6); 
		lM.forEach(m -> System.out.println(m + "\n"));
		
	}
	
	public void listMacchina() {
		System.out.println("\nSelect di tutte le macchine: ");
		List<Macchina> lMa = daoMa.findAllMacchina();
		lMa.forEach(ma -> System.out.println(ma + "\n"));
	}
	
}
