package com.betacom.jpa.controller;

import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import com.betacom.jpa.dto.SocioDTO;
import com.betacom.jpa.services.interfaces.ICertificatoServices;

@RestController
@RequestMapping("/rest/certificato")
public class CertificatoController {

	private ICertificatoServices certificatoServices;

	public CertificatoController(ICertificatoServices certificatoServices) {
		this.certificatoServices = certificatoServices;
	}
	
	@GetMapping("/list")
	public List<SocioDTO> test() {
		return certificatoServices.listAll();
	}
	
	
}
