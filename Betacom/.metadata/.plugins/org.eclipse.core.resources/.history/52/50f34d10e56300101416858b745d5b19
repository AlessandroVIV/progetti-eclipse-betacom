package com.betacom.sb.dao;

import java.sql.ResultSet;
import java.util.ArrayList;
import java.util.List;

import javax.sql.DataSource;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

import com.betacom.sb.models.Uffici;

@Repository
public class UfficiDAO {

	private final JdbcTemplate jdbcTemplate; // Definisco il template JDBC (gestito da Spring)
	
	@Autowired
	public UfficiDAO(DataSource dataSource) {
		this.jdbcTemplate = new JdbcTemplate(dataSource); // Carica il template col datasource
	}
	
	public List<Uffici> getUffici(){
		
		return jdbcTemplate.query("select * from uffici", rs -> {
			
			List<Uffici> uffici = new ArrayList<Uffici>();
			
			while(rs.next()) {
				Uffici u = new Uffici();
				u.setId_ufficio(rs.getInt("id_ufficio"));
				u.setNome_ufficio(rs.getString("nome_ufficio"));
				uffici.add(u);
			}
			
			return uffici;
			
		}
				);
		
	};
	
}
