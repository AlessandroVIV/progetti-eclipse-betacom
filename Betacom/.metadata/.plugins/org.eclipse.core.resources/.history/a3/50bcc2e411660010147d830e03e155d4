package com.betacom.sb.component;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.betacom.sb.dao.BiciDAO;
import com.betacom.sb.dao.MotoDAO;
import com.betacom.sb.dao.VeicoloDAO;
import com.betacom.sb.models.Bici;
import com.betacom.sb.models.Moto;
import com.betacom.sb.models.Veicolo;

@Component
public class BusinessComponent {
	
	@Autowired
	private VeicoloDAO daoV;
	
	@Autowired
	private BiciDAO daoB;
	
	@Autowired
	private MotoDAO daoM;
	
	public void listVeicoli() {
		System.out.println("\nSelect di tutti i veicoli: ");
		List<Veicolo> lV = daoV.findAllVeicoli();
		lV.forEach(v -> System.out.println(v + "\n"));
	}
	
	public void listBici() {
		System.out.println("Select di tutte le bici: ");
		List<Bici> lB = daoB.findAllBici();
		lB.forEach(b -> System.out.println(b + "\n"));
	}
	
	public void listMoto() {
		System.out.println("Select di tutte le moto: ");
		List<Moto> lM = daoM.findAllMoto();
		lM.forEach(m -> System.out.println(m + "\n"));
	}
	
}
