package com.betacom.sb.dao;

import java.util.List;

import javax.sql.DataSource;
import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate;
import com.betacom.sb.models.Bici;

public class BiciDAO {
	
	private final NamedParameterJdbcTemplate jdbcTemplate;

	public BiciDAO(DataSource dataSource) {
		this.jdbcTemplate = new NamedParameterJdbcTemplate(dataSource);
	}
	
	public List<Bici> findAllBici(){
		return jdbcTemplate.query("select * from bici", BeanPropertyRowMapper.newInstance(Bici.class));
	}
	
}
